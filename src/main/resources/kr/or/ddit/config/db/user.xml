<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

  <!-- resultType="패키지 주소.클래스이름" -->
  <select id="selectUserAll" resultType="userVo">
 	 select 
	     *
     from jspuser
  </select>
  
  <select id="selectUser" parameterType="String" resultType="userVo">
     <!-- select * from jspuser where userId=#{userId} -->
     select 
	     *
     from jspuser where userId=#{userId}
  </select>
  
  <select id="selectUserByVo" parameterType="userVo" resultType="userVo">
     select 
	     *
	 from jspuser where userId=#{userId}
  </select>
  
    <!-- 페이지 처리  -->
  <select id="selectUserPageList" parameterType="pageVo" resultType="userVo">
	select *
	from
	(select rownum rnum, a.*
	from
	(select jspuser.*
	from jspuser
	order by userId) a)
	where rnum between #{page}*#{pageSize}-(#{pageSize}-1)
	               and #{page}*#{pageSize}
  </select>
  
  <!-- 회원수  -->
  <select id="getUsetCnt" resultType="int">
 	 select count(*) from jspuser
  </select>
  
  <!-- 신규회원 등록 insert | parameterType=userVo |resultType=userVo-xㅣ응답없음 -->
  <insert id="insertUser" parameterType="userVo">
  	insert into jspuser 
    (userId, name, pass, addr1, addr2, zipcd, birth, email, tel, profile)
    values
    (#{userId}, #{name}, #{pass}, #{addr1}, #{addr2}, #{zipcd}, #{birth}, #{email}, #{tel}, #{profile, jdbcType=VARCHAR})
  </insert>
  
  <!-- 사용자 삭제  -->
  <delete id="deleteUser" parameterType="String">
  	delete from jspuser 
  	where userId=#{userId}
  </delete>
  
  <!-- 회원정보 수정 update  | parameterType=userVo |resultType=userVo-xㅣ응답없음
 	   참조(동적 SQL) : http://www.mybatis.org/mybatis-3/ko/dynamic-sql.html -->
  <update id="updateUser" parameterType="userVo">
  	update jspuser 
    <set>
    	<if test="profile!=null">profile = #{profile},</if>
    	<if test="birth!=null">birth = #{birth},</if>
    	name = #{name}, pass = #{pass}, 
    	addr1 = #{addr1}, addr2 = #{addr2}, zipcd = #{zipcd}, 
    	email = #{email}, tel = #{tel}
    </set> 
    where userId=#{userId}
  </update>
</mapper>


